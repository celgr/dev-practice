---
import DefaultLayout from "../../layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <div class="container">
    <div class="group">
      <div class="block"></div>
      <div class="block"></div>
      <div class="block"></div>
      <div class="block"></div>
    </div>
    <div class="group">
      <div class="block"></div>
      <div class="block"></div>
      <div class="block"></div>
      <div class="block"></div>
    </div>
  </div>
</DefaultLayout>

<style lang="scss">
  .container {
    display: flex;
    overflow: hidden;
  }

  .group {
    display: flex;

    .block {
      width: 600px;
      height: 300px;
      background-image: url(https://picsum.photos/600/300);
    }
  }
</style>

<script>
  import { gsap } from "gsap";

  const groups = document.querySelectorAll<HTMLDivElement>(".group")!;

  const tl = gsap.timeline();

  tl.to(groups, {
    x: "-=100%",
    repeat: -1,
    duration: 6,
    ease: "none",
  });
</script>
